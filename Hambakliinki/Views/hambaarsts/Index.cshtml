@model IEnumerable<Hambakliinki.Models.hambaarst>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.perekonnanimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.spetsialiseerumine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.perekonnanimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.spetsialiseerumine)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.hambaarstId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.hambaarstId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.hambaarstId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
